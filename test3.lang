Letter = 'A';
Newline = '\n';
Tab = '\t';

## Mix of valid and invalid
Valid_number = 123;
Invalid_string = "test";
Valid_bool = TRUE;
Invalid_char = 'x';

## Escape sequences (all invalid in this scanner)
